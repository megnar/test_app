pipeline {
    agent none
    stages {
        stage ("Parallel") {
            parallel {
                stage('Run app') {
                    agent {
                        label 'Local2'
                    }
                    steps {
                        sh 'pip3 install -r requirements.txt'
                        sh 'python3 main.py'
                    }
                }
                stage('Test') {
                    agent {
                        label 'Local'
                    }
                    steps {
                        sleep 10    
                        sh 'cd tests'
                        sh 'python3 -m pytest --alluredir reposts'
                        sleep 10
                        sh 'pkill -f main.py'
                    }
                } 
            }
        }
    }
}



pipeline {
    agent none
    stages {
        stage ("Parallel") {
            parallel {
                stage('Run app') {
                    agent {
                        label 'Local2'
                    }
                    steps {
                        sh 'pip3 install -r requirements.txt'
                        sh 'python3 main.py'
                    }
                }
                stage('Test') {
                    agent {
                        label 'Local'
                    }
                    steps {
                        sleep 10    
                        sh 'cd tests'
                        sh 'python3 -m pytest --alluredir reposts'
                        sh 'pip3 install -r requirements.txt'
                        sh 'cd ..'
                        sh 'pkill -f main.py'
                    }
                } 
            }
        }
        
        stage('Reports') {
            agent {
                label 'Local'
            }
            steps {
               allure([
               includeProperties: false,
               jdk: '',
               properties: [],
               reportBuildPolicy: 'ALWAYS',
               results: [[path: 'tests/reposts']]
               ])
            }
        }
        stage('SonarQube analysis') {
            agent {
                label 'Local'
            }
            steps {
                withSonarQubeEnv('sonar') {
                  sh '/var/opt/sonar-scanner-4.7.0.2747-linux/bin/sonar-scanner -Dsonar.projectKey=develop'
            }
          }
       }
       stage('Start ansible') {
            agent {
                label 'Local'
            }
            steps {
                sh 'ansible-playbook ansible2.yml --user=megnar --extra-vars "ansible_sudo_pass=1234"'
            }
          }
       }
    }
}



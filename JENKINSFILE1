pipeline {
    agent none
    stages {
        stage ("Parallel") {
            parallel {
                stage('Run app') {
                    agent {
                        label 'Local2'
                    }
                    steps {
                        sh 'pip3 install -r requirements.txt'
                        sh 'python3 main.py'
                    }
                }
                stage ('cons') {
                    stage('Test') {
                        agent {
                            label 'Local'
                        }
                        steps {
                            sleep 10    
                            sh 'cd tests'
                            sh 'python3 -m pytest --alluredir reposts'
                        }
                    } 
                    stage('Hello') {
                        agent {
                            label 'Local'
                        }
                        steps {
                            echo "Beb"
                        }
                    } 
                }
            }
        }
    }
}
